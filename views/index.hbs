         <div class="row">
           <div class="center">
             <h3>
               <i class="fa fa-globe"></i>
               {{this.shipping_available_worldwide}}
             </h3>
           </div>
           <div class="col s12 m6">
             <div class="image">
               <img src="images/shipping.jpg" class="responsive-img" alt="Man Shipping">
             </div>
           </div>
             <div class="col s12 m6">
               <div class="location">
                 <ul class="collection with-header">
                   <li class="collection-header"><h4>Location</h4></li>
                   <li class="collection-item">Video Mart</li>
                   <li class="collection-item">363 S. Western Ave</li>
                   <li class="collection-item">LA, CA 90020</li>
                  <li class="collection-item">+1 (213) 381-2467</li>
                </ul>
             </div>
           </div>
         </div>
       </div>
     </section>

     <!-- Section: Contact -->
     <!-- Needs an id b/c part of our nav bar -->
     <section id="contact" class="section section-contact">
       <div class="container">
         <div class="row">
           <!-- col m6 means on med size & bigger, make it a 6 column div; becomes 1/2 & 1/2 of the page -->
           <div class="col s12 m6">
             <div class="card-panel red lighten-1 white-text center">
               <i class="material-icons large">email</i>
               <h5>{{this.contact}}</h5>
               <p>{{this.any_questions_or_comments}}</p>
             </div>
           </div>

           <!-- 2nd half of the container -->
           <div class="col s12 m6">
             <div class="card-panel grey lighten-3">
               <h5>{{this.form}}</h5>
               <div class="input-field">
                 <input type="text" placeholder="{{this.input_name}}" name="" value="">
               </div>
               <!-- why copy the div? why not just do multiple inputs? -->
               <div class="input-field">
                 <input type="text" placeholder="{{this.input_email}}" name="" value="">
               </div>
               <div class="input-field">
                 <!-- in materialize, need class="materialize-textarea" for text area to appear normal; usually dont need it -->
                 <textarea class="materialize-textarea" placeholder="{{this.input_enter_message}}"></textarea>
                 <input type="submit" name="" value="Submit" class="btn pink">
               </div>
             </div>
           </div>
         </div>
       </div>
     </section>

     <!-- Footer -->
     <footer class="section red lighten-2 white-text center">
       <!-- Class flow-text makes it bigger & responsive -->
       <p class="flow-text">Video Mart &copy; 2018</p>
     </footer>
